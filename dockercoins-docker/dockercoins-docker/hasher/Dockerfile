ARG                                                                            \
  digest="@sha256:df559e1eb3c1b4884a28caa43ce163425a7f81cf9b7372d33883cf0fea67303f"
ARG                                                                            \
  image="ruby"
ARG                                                                            \
  tag="3.0.0-alpine3.12"
################################################################################
FROM                                                                           \
  ${image}:${tag}${digest}                                                     \
  AS                                                                           \
  production
################################################################################
ARG                                                                            \
  dir=/app
ARG                                                                            \
  src=hasher.rb
################################################################################
RUN                                                                            \
  apk add --update build-base                                                  \
  &&                                                                           \
  gem install sinatra                                                          \
  &&                                                                           \
  gem install thin                                                             \
                                                                               ;
WORKDIR                                                                        \
  ${dir}
COPY                                                                           \
  ${src}                                                                       \
  script
################################################################################
ENTRYPOINT                                                                     \
  ["ruby"]
CMD                                                                            \
  ["script"]
################################################################################
EXPOSE                                                                         \
  8080
################################################################################
