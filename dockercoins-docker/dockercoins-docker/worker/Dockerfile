ARG                                                                            \
  digest="@sha256:0267b3631f06804da6b1a66c3b399e6335ed394d04d8c714b7a4dfa866c35337"
ARG                                                                            \
  image="python"
ARG                                                                            \
  tag="3.9.1-alpine3.12"
################################################################################
FROM                                                                           \
  ${image}:${tag}${digest}                                                     \
  AS                                                                           \
  production
################################################################################
ARG                                                                            \
  dir=/app
ARG                                                                            \
  src=worker.py
################################################################################
RUN                                                                            \
  pip install redis                                                            \
  &&                                                                           \
  pip install requests                                                         \
                                                                               ;
WORKDIR                                                                        \
  ${dir}
COPY                                                                           \
  ${src}                                                                       \
  script
################################################################################
ENTRYPOINT                                                                     \
  ["python"]
CMD                                                                            \
  ["script"]
################################################################################
