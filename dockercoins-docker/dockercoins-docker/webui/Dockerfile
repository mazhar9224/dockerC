ARG                                                                            \
  digest="@sha256:b5ae41b735cad519ae32cd6eeafbc1191c2d8e9056baf421a17f1c666c2a3753"
ARG                                                                            \
  image="node"
ARG                                                                            \
  tag="4-slim"
################################################################################
FROM                                                                           \
  ${image}:${tag}${digest}                                                     \
  AS                                                                           \
  production
################################################################################
ARG                                                                            \
  dir=/app
ARG                                                                            \
  src=webui.js
################################################################################
RUN                                                                            \
  npm install express                                                          \
  &&                                                                           \
  npm install redis                                                            \
                                                                               ;
WORKDIR                                                                        \
  ${dir}
COPY                                                                           \
  files/                                                                       \
  files/
COPY                                                                           \
  ${src}                                                                       \
  script
################################################################################
ENTRYPOINT                                                                     \
  ["node"]
CMD                                                                            \
  ["script"]
################################################################################
EXPOSE                                                                         \
  8080
################################################################################
